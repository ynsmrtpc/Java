package KolayOrnekler;

import java.util.Scanner;

public class Exp1 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		System.out.print("Please, enter a number:");
		
		int x = scan.nextInt();
		
		System.out.print("Your number is '" + x + "'");
	}
}
